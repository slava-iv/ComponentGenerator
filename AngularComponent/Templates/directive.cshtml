(function () {
    'use strict';

    angular
        .module('app')
        .directive('@(Model.CamelName)', @(Model.CamelName)Directive);

    function @(Model.CamelName)Directive() {
        var directive = {
            restrict: 'E',
            controllerAs: 'vm',
            controller: '@(Model.CamelName)Controller',
            bindToController: true,
            templateUrl: 'app/@(Model.Name)/@(Model.Name).html',
            replace: true
        };
        return directive;
    }

})();